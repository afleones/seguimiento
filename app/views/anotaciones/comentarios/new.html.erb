<!-- breadcrumbs -->
<% breadcrumb :new_anotacion_comentario, @anotacion %>
<div class="row">
  <div class="w-100">
    <!-- infor anotacion -->
    <%= render partial: 'cabecera' %>
    <!-- listado de los comentarios de la anotacion -->
    <div class="row mt-3">
      <div class="col-12">
        <div class="ibox-content d-flex justify-content-between">
          <div class="col-md-12 d-flex flex-wrap">
            <div class="col-12 p-0">
              <h1>Nuevo comentario</h1>
              <!-- cuerpo comentario -->
              <div class="card border-secondar">
                <div class="card-header">
                  <div class="col-12 d-flex justify-content-between p-0">
                    <div class="col-10 pl-0">
                      <h4 class="card-subtitle">Creada por: <%= current_user.nombres%> </strong> </h4>
                    </div>
                    <div class="col-2 pr-0 text-right">
                      <button class="btn pr-0"><i class="fa fa-chevron-up"></i> Cargar archivo</button>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <%= render partial: 'form_new' %>
                </div>
              </div>
            </div>
            <!-- Botones volver, nuevo comentario. -->
            <div class="w-100 mr-0 d-flex justify-content-between">
              <div class="col-3 pl-0">
                <%#= link_to "Nuevo Comentario", new_anotacion_comentario_path, class: "btn btn-primary btn-block"  %>
              </div>
              <div class="col-3 pr-0">
                <%#= link_to "Volver", users_path, class: "btn btn-danger btn-block"  %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>