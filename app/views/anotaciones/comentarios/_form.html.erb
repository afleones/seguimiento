<%= simple_form_for [@anotacion, @comentario] do |f| %>
<%= f.input :descripcion, class: "form-control" %>
<div class="row">
 <!-- botones -->
 <!-- Boton editar anotacion -->
 <div class="col-md-6">
  <%= f.button :submit, class: "btn btn-primary btn-md btn-block" %>
  <% end %>
 </div>
 <!-- boton volver -->
 <div class="col-md-6">
  <%= link_to "volver", anotacion_comentarios_path(@anotacion), class: "btn btn-danger btn-md btn-block" %>
 </div>
</div>
