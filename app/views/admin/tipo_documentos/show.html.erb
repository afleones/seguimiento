<!-- breadcrumbs -->
<% breadcrumb :admin_tipo_documento_show, @tipodocumento %>

<div class="row">
  <div class="col-12 p-0 w-100">
    <div class="ibox content">
      <div clas="row">
        <div class="col-12 p-0 mt-3">
          <!--title-->
          <div class="ibox-title d-flex justify-content-between pr-5">
            <div>
              <h1 class="pl-4"><strong>Información del documento</strong></h1>
            </div>
            <div class="card-subtitle d-flex align-items-center">
              <%= link_to admin_tipo_documento_path(@tipodocumento), method: :delete, data: {confirm: "¿Estas seguro?"} do%>
                <img src="/assets/icoeliminar.png" alt="icono eliminar">
              <% end %>
            </div>
          </div>
          <div class="ibox-content">
            <!--Datos especialidad-->
            <div class="info col-12">
              <div class="card border-secondar">
                <div class="card-header">
                  <h4 class="card-subtitle">ID: <strong><%= @tipodocumento.id %></strong></h4>
                  <h4 class="card-subtitle">Nombre: <strong><%= @tipodocumento.nombre %></strong></h4>
                </div>
              </div>
            </div>
            <!--botonera-->
            <div class="row">
              <div class="col-12 mt-3 mt-3 d-flex justify-content-between">
                <div class="col-4">
                  <%= link_to "Editar", edit_admin_tipo_documento_path(@tipodocumento), class:"btn btn-primary btn-lg btn-block mb-3"%>
                </div>
                <div class="col-4">
                  <%= link_to "Volver", admin_tipo_documentos_path, class: "btn btn-danger btn-lg btn-block" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>